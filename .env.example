# Environment Variables for RunPod Worker Kohya
# Copy this file to .env and fill in your actual values

# OPTIONAL: GPU settings
CUDA_VISIBLE_DEVICES=0

# OPTIONAL: RunPod configuration
RUNPOD_AI_API_KEY=your_runpod_api_key_here
RUNPOD_ENDPOINT_ID=your_endpoint_id_here

# OPTIONAL: Bucket configuration for model storage
BUCKET_ENDPOINT_URL=
BUCKET_ACCESS_KEY_ID=
BUCKET_SECRET_ACCESS_KEY=

# OPTIONAL: Hugging Face token for model downloads
HUGGINGFACE_TOKEN=

# OPTIONAL: Logging level
LOG_LEVEL=INFO

# OPTIONAL: Memory and performance settings
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512
TOKENIZERS_PARALLELISM=false